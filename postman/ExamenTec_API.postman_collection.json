  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/Account/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "Account",
                "login"
              ]
            },
            "description": "Autenticación para obtener el token JWT. Puedes intercambiar las credenciales por las de Product o Category si necesitas validar políticas específicas."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login exitoso\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "if (json && json.result) {",
                  "    pm.environment.set(\"token\", json.result.token);",
                  "    pm.environment.set(\"tokenExpiresAt\", json.result.expiresAt);",
                  "    pm.environment.set(\"userRole\", json.result.role);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
